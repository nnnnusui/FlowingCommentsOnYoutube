{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": [
          "esnext",
          "dom"
      ],
      "types": [
          "@types/chrome",
          "vite/client",
      ],
      "jsx": "preserve",
      "jsxImportSource": "solid-js",
      "importHelpers": true,
      "removeComments": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
          "@/*": ["src/*"],
      },
  },
  "include": [
      "src",
  ]
}